@page
@model PrivacyModel
@{
    ViewData["Title"] = "Employee Directory";
}

<style>
  .employee-table { width:100%; border-collapse:collapse; margin-top:16px; font-family:Segoe UI, Tahoma, Geneva, Verdana, sans-serif; }
  .employee-table th { background:linear-gradient(90deg,#0d6efd,#6610f2); color:#fff; padding:10px; text-align:left; }
  .employee-table td { padding:10px; border-bottom:1px solid #eee; }
  .dept-badge { display:inline-block; padding:4px 8px; border-radius:12px; background:#f1f5f9; color:#0b1220; font-size:12px; }
  .hiring-date { color:#6b7280; font-size:13px; }
</style>

<h1>@ViewData["Title"]</h1>

<p>Below is a sample employee directory loaded from <code>sampledata.json</code>.</p>

@if (Model.Employees?.Any() != true)
{
    <div>No employee data available.</div>
}
else
{
    <table class="employee-table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Job Title</th>
                <th>Department</th>
                <th>Hiring Date</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var e in Model.Employees)
        {
            <tr>
                <td>@e.FirstName</td>
                <td>@e.LastName</td>
                <td>@e.JobTitle</td>
                <td><span class="dept-badge">@e.Department</span></td>
                <td class="hiring-date">@e.HiringDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
        </tbody>
    </table>
}

